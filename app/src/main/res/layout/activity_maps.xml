<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nearbyplaces.devsoftware.nearbyplaces.MapsActivity" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="20dp">
        <ImageButton
            android:id="@+id/btnRestaurant"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:src="@mipmap/ic_local_dining_black_24dp"
            android:layout_weight="0.25"
            />
        <ImageButton
            android:id="@+id/btnHospital"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:src="@mipmap/ic_local_hospital_black_24dp"
            android:layout_weight="0.25"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textAlignment="center"
            />

        <ImageButton
            android:id="@+id/btnSchool"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:src="@mipmap/ic_school_black_24dp"
            android:layout_weight="0.25"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="-27dp"
            >
            <TextView
                android:id="@+id/resturantTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearby_restaurants"
                android:textColor="@color/primary_text"
                android:layout_weight="0.25"
                android:textSize="15sp"
                android:textAlignment="center"

                />

            <TextView
                android:id="@+id/hospitalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearby_hospitals"
                android:textColor="@color/primary_text"
                android:layout_weight="0.25"
                android:textAlignment="center"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/schoolTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearby_schools"
                android:textColor="@color/primary_text"
                android:layout_weight="0.25"
                android:textAlignment="center"
                android:textSize="15sp"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>